{
  "name": "@sally/backend",
  "version": "0.1.0",
  "description": "SALLY Node.js/TypeScript Backend",
  "author": "SALLY Team",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:status": "prisma migrate status",
    "prisma:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:cleanup": "npx ts-node --transpile-only scripts/cleanup-for-testing.ts",
    "firebase:create-users": "ts-node scripts/create-firebase-users.ts",
    "firebase:link-uids": "ts-node scripts/link-firebase-uids.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/cache-manager": "3.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "11.0.2",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "6.1.0",
    "@nestjs/swagger": "11.2.5",
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "@sally/shared-types": "*",
    "@types/nodemailer": "7.0.9",
    "axios": "1.13.4",
    "bcrypt": "6.0.0",
    "cache-manager": "7.2.8",
    "cache-manager-ioredis": "2.1.0",
    "cache-manager-redis-yet": "5.1.5",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "cookie-parser": "1.4.7",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "firebase-admin": "13.6.0",
    "ioredis": "5.9.2",
    "nanoid": "3.3.11",
    "nestjs-pino": "4.5.0",
    "nestjs-zod": "5.1.1",
    "nodemailer": "7.0.13",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pg": "8.17.2",
    "pino": "10.3.0",
    "pino-pretty": "13.1.3",
    "reflect-metadata": "^0.2.2",
    "resend": "6.9.1",
    "rxjs": "^7.8.1",
    "uuid": "13.0.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "11.0.16",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "11.1.12",
    "@types/bcrypt": "6.0.0",
    "@types/cookie-parser": "1.4.10",
    "@types/express": "5.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "22.19.7",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.3",
    "@types/uuid": "10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "30.2.0",
    "prettier": "^3.4.2",
    "prisma": "7.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "7.2.2",
    "ts-jest": "29.4.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
