{
  "name": "sally",
  "version": "0.1.0",
  "private": true,
  "description": "SALLY - Rest Optimization System for truck drivers",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "install:all": "./install.sh",
    "backend:dev": "turbo run dev --filter=@sally/backend",
    "backend:build": "turbo run build --filter=@sally/backend",
    "backend:test": "turbo run test --filter=@sally/backend",
    "backend:db:push": "cd apps/backend && npm run db:push",
    "backend:seed": "cd apps/backend && npm run db:seed",
    "backend:prisma:generate": "cd apps/backend && npm run prisma:generate",
    "backend:prisma:studio": "cd apps/backend && npm run prisma:studio",
    "backend-py:dev": "cd apps/backend-py && uv run fastapi dev app/main.py",
    "backend-py:test": "cd apps/backend-py && uv run pytest tests/",
    "backend-py:migrate": "docker-compose exec backend uv run alembic upgrade head",
    "backend-py:seed": "docker-compose exec backend uv run python scripts/db_seed.py",
    "frontend:dev": "turbo run dev --filter=@sally/web",
    "docs:dev": "turbo run dev --filter=@sally/docs",
    "docker:up": "docker-compose up -d",
    "docker:build": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
