{
  "name": "rest-os",
  "version": "0.1.0",
  "private": true,
  "description": "REST-OS - Rest Optimization System for truck drivers",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "install:all": "./install.sh",
    "backend:dev": "turbo run dev --filter=@rest-os/backend",
    "backend:build": "turbo run build --filter=@rest-os/backend",
    "backend:test": "turbo run test --filter=@rest-os/backend",
    "backend-py:dev": "cd apps/backend-py && uv run fastapi dev app/main.py",
    "backend-py:test": "cd apps/backend-py && uv run pytest tests/",
    "frontend:dev": "turbo run dev --filter=@rest-os/web",
    "docker:up": "docker-compose up -d",
    "docker:build": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "db:migrate": "docker-compose exec backend uv run alembic upgrade head",
    "db:seed": "docker-compose exec backend uv run python scripts/db_seed.py"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
